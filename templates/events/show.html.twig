{% extends 'base.html.twig' %}

{% block title %}Events
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.event-details {
			transform-style: preserve-3d;
			transition: transform 0.5s ease;
		}

		.event-details:hover {
			transform: rotateY(10deg) scale(1.1);
			box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.2);
		}
	</style>
{% endblock %}

{% block body %}
	<h1>Events</h1>

	<div class="event-details card p-4">
		<div class="row">
			<div class="col-md-6">
				<img src="{{ event.image }}" alt="{{ event.name }}" class="img-fluid">
			</div>
			<div class="col-md-6">
				<h2>{{ event.name }}</h2>
				<p>{{ event.description }}</p>
				<p>
					<strong>Date:</strong>
					{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</p>
				<p>
					<strong>Capacity:</strong>
					{{ event.capacity }}</p>
				<p>
					<strong>Email:</strong>
					{{ event.email }}</p>
				<p>
					<strong>Phone Number:</strong>
					{{ event.phoneNumber }}</p>
				<p>
					<strong>Address:</strong>
					{{ event.address }}</p>
				<p>
					<strong>URL:</strong>
					{{ event.URL }}</p>
				<p>
					<strong>Type:</strong>
					{{ event.type }}</p>

				<a href="{{ path('app_events_index') }}" class="btn btn-outline-primary">Back to List</a>
				<a href="{{ path('app_events_edit', {'id': event.id}) }}" class="btn btn-outline-success">Edit</a>
				{{ include('events/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
